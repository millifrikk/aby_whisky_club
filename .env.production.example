# Production Environment Variables for Railway Deployment

# Node Environment
NODE_ENV=production

# Database Configuration (Railway PostgreSQL)
DATABASE_URL=postgresql://postgres:password@host:port/database

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-characters

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.railway.app
FRONTEND_URL=https://your-frontend-domain.railway.app

# Server Configuration
PORT=3001

# Email Configuration (Optional - for production email features)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@abywhiskyclub.com

# Rate Limiting (Optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers (Optional)
HELMET_CSP_DIRECTIVES=default-src 'self'

# Session Configuration (Optional)
SESSION_SECRET=your-session-secret-key
SESSION_TIMEOUT=3600000

# File Upload Configuration (Optional)
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/tmp/uploads